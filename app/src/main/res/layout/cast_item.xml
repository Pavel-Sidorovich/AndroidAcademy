<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/spacing_large_24"
    android:elevation="@dimen/cast_elevation"
    android:paddingBottom="@dimen/spacing_large_24">

    <ImageView
        android:id="@+id/image_cast"
        android:layout_width="@dimen/ci_image_80"
        android:layout_height="@dimen/ci_image_80"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars"
        android:contentDescription="@string/cast_name" />

    <TextView
        android:id="@+id/name_cast"
        android:layout_width="@dimen/ci_image_80"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_extra_small_4"
        style="@style/DetailsTextCast"
        tools:text="@tools:sample/lorem"/>

    <TextView
        android:id="@+id/character_cast"
        android:layout_width="@dimen/ci_image_80"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_extra_small_4"
        style="@style/DetailsCharacterCast"
        tools:text="@tools:sample/lorem"/>
</LinearLayout>
