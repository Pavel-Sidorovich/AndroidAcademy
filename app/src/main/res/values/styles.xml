<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextSize14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSize12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextBold" parent="TextSize14">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Tag" parent="TextSize14">
        <item name="android:textColor">@color/selected</item>
        <item name="android:alpha">0.75</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:progressTint">@color/selected</item>
        <item name="android:progressBackgroundTint">@color/no_selected</item>
    </style>

    <style name="DetailsPG" parent="TextSize12">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="DetailsName">
        <item name="android:textSize">40sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#ECECEC</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">-6sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DetailsReviews" parent="TextBold">
        <item name="android:textColor">@color/no_selected</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="DetailsStorylineTitle" parent="TextBold">
        <item name="android:textColor">#ECECEC</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="DetailsStoryline" parent="TextSize14">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:alpha">0.5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="DetailsHeading" parent="TextBold">
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#ECECEC</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="DetailsTextCast" parent="TextSize12">
        <item name="android:textColor">@color/actor_name_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieReviews">
        <item name="android:textColor">@color/no_selected</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MovieTag">
        <item name="android:textColor">@color/selected</item>
        <item name="android:textSize">8sp</item>
        <item name="android:alpha">0.75</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="MovieName" parent="TextSize14">
        <item name="android:textColor">#ECECEC</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieDuration" parent="MovieReviews" />
</resources>
