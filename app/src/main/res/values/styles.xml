<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextSize14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSize12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextBold" parent="TextSize14">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Tag" parent="TextSize14">
        <item name="android:textColor">@color/selected_color</item>
        <item name="android:alpha">0.75</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:progressTint">@color/selected_color</item>
        <item name="android:progressBackgroundTint">@color/no_selected_color</item>
    </style>

    <style name="DetailsPG" parent="TextSize12">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="DetailsReviews" parent="TextBold">
        <item name="android:textColor">@color/no_selected_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="DetailsStorylineTitle" parent="TextBold">
        <item name="android:textColor">#ECECEC</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="DetailsStoryline" parent="TextSize14">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:alpha">0.5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="DetailsHeading" parent="TextBold">
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#ECECEC</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="DetailsTextCast" parent="TextSize12">
        <item name="android:textColor">@color/actor_name_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieReviews">
        <item name="android:textColor">@color/no_selected_color</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MovieTag">
        <item name="android:textColor">@color/selected_color</item>
        <item name="android:textSize">8sp</item>
        <item name="android:alpha">0.75</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="MovieName" parent="TextSize14">
        <item name="android:textColor">#ECECEC</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieDuration" parent="MovieReviews" />

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat" />
</resources>
